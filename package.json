{
  "name": "artistry-hub",
  "version": "1.0.0",
  "private": true,
  "description": "ArtistryHub - A platform for artists and social workers",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev --concurrency=12",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "typecheck": "turbo run typecheck",
    "test": "turbo run test",
    "clean": "turbo run clean",
    "db:generate": "prisma generate --schema packages/db/prisma/schema.prisma",
    "db:migrate": "prisma migrate dev --schema packages/db/prisma/schema.prisma",
    "db:seed": "tsx packages/db/prisma/seed.ts",
    "db:reset": "cd packages/db && yarn prisma migrate reset --force",
    "db:studio": "prisma studio --schema packages/db/prisma/schema.prisma"
  },
  "devDependencies": {
    "prisma": "^5.22.0",
    "tsx": "^4.0.0",
    "turbo": "^1.10.0"
  },
  "packageManager": "yarn@4.9.2",
  "engines": {
    "node": ">=18.0.0"
  }
}
